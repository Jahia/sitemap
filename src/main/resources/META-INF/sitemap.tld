<?xml version="1.0" encoding="ISO-8859-1"?>

<taglib xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
        version="2.1">

    <display-name>Sitemap Tag Library</display-name>
    <tlib-version>1.0</tlib-version>
    <short-name>sitemap</short-name>
    <uri>http://www.jahia.org/sitemap</uri>

    <!-- query helper functions -->
    <function>
        <name>getSitemapRoots</name>
        <function-class>org.jahia.modules.sitemap.utils.Utils</function-class>
        <function-signature>java.util.Set getSitemapRoots(org.jahia.services.render.RenderContext,java.lang.String)</function-signature>
    </function>
    <function>
        <name>encodeSitemapLink</name>
        <function-class>org.jahia.modules.sitemap.utils.Utils</function-class>
        <function-signature>java.lang.String encodeSitemapLink(java.lang.String)</function-signature>
    </function>
    <function>
        <name>getHostName</name>
        <function-class>org.jahia.modules.sitemap.utils.Utils</function-class>
        <function-signature>java.lang.String getHostName(org.jahia.services.content.decorator.JCRSiteNode)</function-signature>
    </function>
</taglib>
